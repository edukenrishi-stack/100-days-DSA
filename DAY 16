#include <stdio.h>

int main() {
    int n;
    
    // Read array size
    scanf("%d", &n);
    
    // Declare array
    int arr[n];
    
    // Read array elements
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    // Array to track if an element has been counted
    int visited[n];
    for (int i = 0; i < n; i++) {
        visited[i] = 0; // Initialize all as not visited
    }
    
    // Count frequency of each element
    int first = 1; // Flag for spacing
    
    for (int i = 0; i < n; i++) {
        // Skip if already counted
        if (visited[i] == 1) {
            continue;
        }
        
        // Count frequency of arr[i]
        int count = 1;
        for (int j = i + 1; j < n; j++) {
            if (arr[i] == arr[j]) {
                count++;
                visited[j] = 1; // Mark as visited
            }
        }
        
        // Print element and its frequency
        if (!first) {
            printf(" ");
        }
        printf("%d:%d", arr[i], count);
        first = 0;
    }
    
    printf("\n");
    
    return 0;
}
